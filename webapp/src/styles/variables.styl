gutter = 15px
screen-xs = 480px
screen-sm = 768px
screen-md = 992px
screen-lg = 1200px
container-xs = 476px
container-sm = 760px
container-md = 980px
container-lg = 1180px

font-awesome()
    font-family: 'FontAwesome';

trebuchet()
    font-family: 'Trebuchet MS', 'Lucida Grande', 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, sans-serif;

hlmt-rounded()
    font-family: 'hlmt-rounded', Arial, sans-serif;

century-gothic()
    font-family: 'Muli', Arial, sans-serif;

container()
    margin-right auto
    margin-left auto

    @media (min-width screen-xs)
        width container-xs

    @media (min-width screen-sm)
        width container-sm

    @media (min-width screen-md)
        width container-md

    @media (min-width screen-lg)
        width container-lg

container-max()
    margin-left auto
    margin-right auto

    @media (min-width screen-xs)
        max-width container-xs

    @media (min-width screen-sm)
        max-width container-sm

    @media (min-width screen-md)
        max-width container-md

    @media (min-width screen-lg)
        max-width container-lg

column(current, max, gutter = 0)
    if gutter != 0
        width "calc(%s% - %s)" % (((current * 100) / max) (gutter * 2))
    else
        width ((current * 100) / max) %

prepend(current, max, gutter = 0)
    if gutter != 0
        margin-left "calc(%s% + %s)" % (((current * 100) / max) gutter)
    else
        margin-left ((current * 100) / max) %

append(current, max)
    if gutter != 0
        margin-right "calc(%s% + %s)" % (((current * 100) / max) gutter)
    else
        margin-right ((current * 100) / max) %

pull(current, max)
    right ((current * 100) / max) %

push(current, max)
    left ((current * 100) / max) %


clear-left()
    &::after
        content ""
        display block
        clear left